@page "/"
@inject NavigationManager NavigationManager
@inject IJSRuntime JS

<PageTitle>Login</PageTitle>

@*<h1>Hello, world!</h1>

    Welcome to your new app.

    <SurveyPrompt Title="How is Blazor working for you?" />
